<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="newcamp-wrapper">
                <h1 class="text-center">Create a new Project</h1>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <form action="/projects" method="post" class="form" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Title of the project</label>
                                <input type="text" class="form-control" name="project[title]" placeholder="Camp Name">
                            </div>
                            <div class="form-group">
                                <label>Image of the project</label>
                                <input type="file" class="form-control" name="project[image]" placeholder="Image" required>
                            </div>
                            <div class="form-group">
                                <label>Client</label>
                                <select name="project[group]" class="form-control">
                                	<option value="" disabled selected>Select your option</option>
                                	<% groups.forEach(function(group){ %>
	                                	<% if (group.name != "dev" && group.name != "admin") { %>
											<option value="<%= group.name %>"><%= group.name %></option>
	                                	<% }%>
                                	<% }) %>
                                	<!-- <option value="other">Other</option> -->
                                </select>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-lg btn-default btn-block">Add</button>
                            </div>
                        </form>
                        <a href="/projects">Back</a>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>